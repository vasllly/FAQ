{% extends "layouts.app" %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Редактирование темы с id={{ theme['id'] }}</div>

                <div class="card-body">
                    <form method="POST" action="{{ route('themes.update', theme['id']) }}">
                        {{ csrf_field() }}
                        {{ method_field('PUT') }}
                        <div class="form-group row">
                            <label for="name" class="col-md-4 col-form-label text-md-right">Название темы</label>

                            <div class="col-md-6">
                                <input id="name" type="name" class="form-control{% if errors.first('name') %} is-invalid{% else %}{% endif %}" name="name" value="{{ old('name') ? old('name') : theme['name'] }}" required autofocus>

                                {% if errors.first('name') %}
                                    <span class="invalid-feedback" role="alert">
                                        <strong>{{ errors.first('name') }}</strong>
                                    </span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="form-group row mb-0">
                            <div class="col-md-8 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Применить
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
